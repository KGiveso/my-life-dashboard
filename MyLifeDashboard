import React, { useState, useEffect, useCallback, useMemo } from 'react';
import {
  initializeApp
} from 'firebase/app';
import {
  getAuth,
  signInAnonymously,
  signInWithCustomToken,
  signOut,
  onAuthStateChanged
} from 'firebase/auth';
import {
  getFirestore,
  doc,
  setDoc,
  onSnapshot,
  collection,
  query,
  where,
  getDocs,
  Timestamp,
  deleteDoc,
  setLogLevel
} from 'firebase/firestore';
import { User, Clock, CheckCircle, Save, LogOut, Facebook, Pencil, Trash2 } from 'lucide-react';

// --- Global Firebase Setup Variables (Mandatory Use) ---
const appId = typeof __app_id !== 'undefined' ? __app_id : 'default-app-id';
const firebaseConfig = typeof __firebase_config !== 'undefined' ? JSON.parse(__firebase_config) : {};
const initialAuthToken = typeof __initial_auth_token !== 'undefined' ? __initial_auth_token : null;

// Convert global config to boolean check
const isFirebaseConfigured = Object.keys(firebaseConfig).length > 0 && firebaseConfig.apiKey;

// Initialize Firebase services outside the component to prevent re-initialization
let app, auth, db;
if (isFirebaseConfigured) {
  app = initializeApp(firebaseConfig);
  auth = getAuth(app);
  db = getFirestore(app);
  // Enable debug logging for better development visibility
  // setLogLevel('debug');
}


// --- Utility Functions ---

/**
 * Calculates the number of days until the target date.
 * @param {Date} targetDate 
 * @returns {number} Days remaining.
 */
const getDaysUntil = (targetDate) => {
  if (!targetDate) return Infinity;
  const now = new Date();
  // Set time to midnight for accurate day counting
  now.setHours(0, 0, 0, 0);
  const target = new Date(targetDate);
  target.setHours(0, 0, 0, 0);

  const diffTime = target.getTime() - now.getTime();
  const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
  return diffDays;
};

/**
 * Formats Firestore Timestamp/Date objects into a readable date string.
 * @param {Timestamp | Date} dateValue 
 * @returns {string} Formatted date string or empty string.
 */
const formatDate = (dateValue) => {
  if (!dateValue) return '';
  const date = dateValue instanceof Timestamp ? dateValue.toDate() : new Date(dateValue);
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric'
  });
};

/**
 * Determine the styling for expiry based on days remaining.
 * @param {number} days 
 * @returns {string} Tailwind CSS class names.
 */
const getExpiryStyle = (days) => {
  if (days <= 0) {
    return 'bg-red-600 text-white shadow-lg'; // Expired
  }
  if (days <= 30) {
    return 'bg-yellow-500 text-gray-900 shadow-md'; // Expires soon (1 month)
  }
  if (days <= 90) {
    return 'bg-amber-300 text-gray-800'; // Expires within 3 months
  }
  return 'bg-green-100 text-gray-700'; // Fine
};


// --- Default Data Structures ---

const defaultProfile = {
  fullName: 'John Doe',
  idNumber: '1234567890',
  occupation: 'Software Developer',
  policyNumber: 'INS-98765',
  licenseExpiry: null,
  passportExpiry: null,
  medicalAidNumber: 'MED-123',
};

const defaultChecklist = [
  { id: 'will', name: 'Do you have a will?', checked: false },
  { id: 'emergencyContacts', name: 'Do you have a list of emergency contacts?', checked: true },
  { id: 'medicalInfo', name: 'Do you have medical emergency info readily available?', checked: true },
  { id: 'backupPhotos', name: 'Is your photo library backed up?', checked: false },
];


// --- Main Application Component ---

const App = () => {
  const [user, setUser] = useState(null);
  const [userId, setUserId] = useState(null);
  const [loading, setLoading] = useState(true);
  const [profile, setProfile] = useState(defaultProfile);
  const [checklist, setChecklist] = useState(defaultChecklist);
  const [editMode, setEditMode] = useState(false);
  const [apiError, setApiError] = useState(null);

  // --- 1. Authentication and Initialization ---

  const handleAuth = useCallback(async (isInitialLoad) => {
    if (!isFirebaseConfigured) {
      setApiError("Firebase is not configured. Please ensure __firebase_config is set.");
      setLoading(false);
      return;
    }

    try {
      if (initialAuthToken) {
        // Use custom token for sign-in
        const userCredential = await signInWithCustomToken(auth, initialAuthToken);
        // console.log("Signed in with custom token:", userCredential.user.uid);
      } else if (isInitialLoad) {
        // If no token, use anonymous sign-in, but only on initial load
        await signInAnonymously(auth);
        // console.log("Signed in anonymously.");
      }
    } catch (e) {
      setApiError(`Authentication failed: ${e.message}`);
      setLoading(false);
    }
  }, []);

  useEffect(() => {
    // Initial Auth Attempt
    handleAuth(true);

    // Auth State Listener
    const unsubscribeAuth = onAuthStateChanged(auth, (currentUser) => {
      setLoading(false);
      if (currentUser) {
        setUser(currentUser);
        setUserId(currentUser.uid);
        // console.log("Auth State Changed: User Logged In", currentUser.uid);
      } else {
        setUser(null);
        setUserId(null);
        // console.log("Auth State Changed: User Logged Out");
      }
    });

    return () => unsubscribeAuth();
  }, [handleAuth]);


  // --- 2. Firestore Data Handlers ---

  const profileRef = useMemo(() => {
    if (db && userId) {
      // Private data path: /artifacts/{appId}/users/{userId}/dashboardData/profile
      return doc(db, `artifacts/${appId}/users/${userId}/dashboardData/profile`);
    }
    return null;
  }, [db, userId]);

  const checklistCollectionRef = useMemo(() => {
    if (db && userId) {
      // Private data path: /artifacts/{appId}/users/{userId}/dashboardData/checklist
      return collection(db, `artifacts/${appId}/users/${userId}/dashboardData/checklist`);
    }
    return null;
  }, [db, userId]);

  // Fetch and Listen to Profile Data
  useEffect(() => {
    if (!profileRef) return;

    const unsubscribeProfile = onSnapshot(profileRef, (docSnap) => {
      if (docSnap.exists()) {
        const data = docSnap.data();
        // Convert Firestore Timestamp to Date objects if they exist
        setProfile({
          ...defaultProfile,
          ...data,
          licenseExpiry: data.licenseExpiry ? data.licenseExpiry.toDate() : null,
          passportExpiry: data.passportExpiry ? data.passportExpiry.toDate() : null,
        });
        // console.log("Profile data loaded.");
      } else {
        // If no data exists, initialize with default values
        setProfile(defaultProfile);
        // console.log("No profile data, using defaults.");
      }
    }, (error) => {
      // console.error("Error fetching profile:", error);
      setApiError("Failed to fetch profile data. Check security rules.");
    });

    return () => unsubscribeProfile();
  }, [profileRef]);

  // Fetch and Listen to Checklist Data
  useEffect(() => {
    if (!checklistCollectionRef) return;

    const unsubscribeChecklist = onSnapshot(checklistCollectionRef, (snapshot) => {
      const items = snapshot.docs.map(doc => ({
        id: doc.id,
        ...doc.data()
      }));

      if (items.length > 0) {
        setChecklist(items);
        // console.log("Checklist data loaded.", items.length, "items.");
      } else {
        // If no data, populate with default list
        defaultChecklist.forEach(async (item) => {
            await setDoc(doc(checklistCollectionRef, item.id), item);
        });
        setChecklist(defaultChecklist);
        // console.log("Checklist initialized with defaults.");
      }
    }, (error) => {
      // console.error("Error fetching checklist:", error);
      setApiError("Failed to fetch checklist data. Check security rules.");
    });

    return () => unsubscribeChecklist();
  }, [checklistCollectionRef]);

  // Function to save profile data
  const handleSaveProfile = async () => {
    if (!profileRef) return;
    setEditMode(false);
    try {
      // Convert Date objects back to Firestore Timestamp for saving
      const dataToSave = {
        ...profile,
        licenseExpiry: profile.licenseExpiry ? Timestamp.fromDate(new Date(profile.licenseExpiry)) : null,
        passportExpiry: profile.passportExpiry ? Timestamp.fromDate(new Date(profile.passportExpiry)) : null,
      };
      await setDoc(profileRef, dataToSave, { merge: true });
      // console.log("Profile saved successfully.");
    } catch (e) {
      // console.error("Error saving profile:", e);
      setApiError("Error saving profile data.");
    }
  };

  // Function to update checklist item
  const toggleChecklistItem = async (item) => {
    if (!checklistCollectionRef) return;
    try {
      const itemRef = doc(checklistCollectionRef, item.id);
      await setDoc(itemRef, { checked: !item.checked }, { merge: true });
    } catch (e) {
      // console.error("Error updating checklist item:", e);
      setApiError("Error updating checklist item.");
    }
  };

  // --- 3. Derived State: Expiry Items ---

  const expiringItems = useMemo(() => {
    const items = [];

    // Check License
    if (profile.licenseExpiry) {
      const days = getDaysUntil(profile.licenseExpiry);
      items.push({
        name: 'Driving License',
        date: profile.licenseExpiry,
        days,
        style: getExpiryStyle(days),
      });
    }

    // Check Passport
    if (profile.passportExpiry) {
      const days = getDaysUntil(profile.passportExpiry);
      items.push({
        name: 'Passport',
        date: profile.passportExpiry,
        days,
        style: getExpiryStyle(days),
      });
    }

    // Sort: Expired first, then soonest to expire
    return items.sort((a, b) => a.days - b.days);

  }, [profile]);


  // --- 4. UI Components ---

  const Header = () => (
    <div className="flex justify-between items-center p-4 bg-white shadow-md rounded-lg mb-4">
      <h1 className="text-2xl font-extrabold text-blue-600">My Life Dashboard</h1>
      {loading ? (
        <div className="text-gray-500">Loading...</div>
      ) : user ? (
        <button
          onClick={handleLogout}
          className="flex items-center space-x-2 px-3 py-1 bg-red-500 text-white rounded-lg shadow-md hover:bg-red-600 transition duration-150"
        >
          <LogOut size={16} />
          <span>Log Out</span>
        </button>
      ) : (
        <button
          onClick={() => handleAuth(true)} // Mock Facebook Login
          className="flex items-center space-x-2 px-3 py-1 bg-blue-600 text-white rounded-lg shadow-md hover:bg-blue-700 transition duration-150"
        >
          <Facebook size={16} />
          <span>Sign In (Demo)</span>
        </button>
      )}
    </div>
  );

  const handleLogout = async () => {
    if (auth) {
      await signOut(auth);
      setProfile(defaultProfile);
      setChecklist(defaultChecklist);
    }
  };

  const Card = ({ title, children, icon: Icon, actions }) => (
    <div className="bg-white p-5 rounded-xl shadow-xl border border-gray-100 flex flex-col h-full">
      <div className="flex justify-between items-start mb-4">
        <h2 className="text-xl font-bold text-gray-800 flex items-center space-x-2">
          <Icon size={20} className="text-blue-500" />
          <span>{title}</span>
        </h2>
        <div className="flex space-x-2">
          {actions}
        </div>
      </div>
      <div className="flex-grow">{children}</div>
    </div>
  );

  const ProfileCard = () => (
    <Card
      title="My Profile Data"
      icon={User}
      actions={
        user && (
          <button
            onClick={() => editMode ? handleSaveProfile() : setEditMode(true)}
            className={`flex items-center px-2 py-1 text-sm rounded-full transition duration-150 ${editMode ? 'bg-green-500 text-white shadow-md hover:bg-green-600' : 'bg-blue-100 text-blue-600 hover:bg-blue-200'}`}
          >
            {editMode ? <Save size={16} /> : <Pencil size={16} />}
          </button>
        )
      }
    >
      <div className="grid grid-cols-1 gap-3 text-sm">
        {Object.entries(profile).map(([key, value]) => {
          const label = key.replace(/([A-Z])/g, ' $1').replace(/^./, str => str.toUpperCase());
          const isDate = key.includes('Expiry');

          return (
            <div key={key} className="flex flex-col">
              <span className="font-semibold text-gray-500">{label}:</span>
              {editMode ? (
                <input
                  type={isDate ? 'date' : 'text'}
                  value={isDate ? (value ? new Date(value).toISOString().split('T')[0] : '') : value || ''}
                  onChange={(e) => setProfile(p => ({
                    ...p,
                    [key]: isDate ? new Date(e.target.value) : e.target.value
                  }))}
                  className="mt-1 p-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500"
                />
              ) : (
                <span className="mt-1 text-gray-700 font-medium">
                  {isDate && value ? formatDate(value) : (value || 'N/A')}
                </span>
              )}
            </div>
          );
        })}
        {user && (
           <div className="flex flex-col mt-2 pt-2 border-t border-gray-100">
             <span className="font-semibold text-xs text-gray-400">User ID:</span>
             <span className="text-xs break-all text-gray-500">{userId}</span>
           </div>
        )}
      </div>
    </Card>
  );

  const ExpiryCard = () => (
    <Card title="What is Expiring Soon?" icon={Clock}>
      <div className="space-y-3">
        {expiringItems.length > 0 ? (
          expiringItems.map((item, index) => (
            <div key={index} className={`p-3 rounded-lg flex justify-between items-center transition duration-300 ${item.style}`}>
              <div className="flex flex-col">
                <span className="font-bold text-base">{item.name}</span>
                <span className="text-sm">{formatDate(item.date)}</span>
              </div>
              <div className="text-right">
                {item.days > 0 ? (
                  <>
                    <span className="font-extrabold text-xl">{item.days}</span>
                    <span className="text-xs block">Days Left</span>
                  </>
                ) : (
                  <span className="font-extrabold text-lg uppercase">EXPIRED</span>
                )}
              </div>
            </div>
          ))
        ) : (
          <p className="text-gray-500 italic">No expiry dates recorded or everything is current!</p>
        )}
      </div>
    </Card>
  );

  const ChecklistCard = () => (
    <Card title="Life Admin Checklist" icon={CheckCircle}>
      <div className="space-y-3">
        {checklist.map((item) => (
          <div
            key={item.id}
            onClick={() => user && toggleChecklistItem(item)}
            className={`flex items-center justify-between p-3 rounded-lg cursor-pointer transition duration-200 ${item.checked ? 'bg-green-50 hover:bg-green-100' : 'bg-gray-50 hover:bg-gray-100'}`}
          >
            <span className={`font-medium ${item.checked ? 'line-through text-gray-500' : 'text-gray-700'}`}>
              {item.name}
            </span>
            <CheckCircle size={20} className={item.checked ? 'text-green-500' : 'text-gray-300'} />
          </div>
        ))}
      </div>
      {!user && <p className="text-sm text-center text-red-500 mt-4">Sign in to update your checklist.</p>}
    </Card>
  );


  // --- 5. Main Render ---

  if (loading) {
    return (
      <div className="min-h-screen flex items-center justify-center bg-gray-50 p-4">
        <div className="text-lg font-semibold text-blue-600">Loading Dashboard...</div>
      </div>
    );
  }

  if (apiError) {
    return (
      <div className="min-h-screen flex flex-col items-center justify-center bg-red-50 p-4 text-red-800">
        <h2 className="text-2xl font-bold mb-4">API Error</h2>
        <p className="max-w-md text-center">{apiError}</p>
        <p className="mt-4 text-sm text-red-600">Please check the console for detailed Firebase/Firestore errors and ensure security rules are configured correctly for path: `/artifacts/{appId}/users/{userId}/...`</p>
      </div>
    );
  }

  return (
    <div className="min-h-screen bg-gray-50 p-4 font-inter">
      <div className="max-w-4xl mx-auto">
        <Header />

        {!user ? (
           <div className="text-center p-8 bg-white rounded-xl shadow-lg mt-8">
             <h2 className="text-xl font-semibold text-gray-700">Welcome to My Life!</h2>
             <p className="text-gray-500 mt-2 mb-4">Please sign in to access and manage your personal dashboard.</p>
             <button
                onClick={() => handleAuth(true)}
                className="flex items-center justify-center w-full max-w-xs mx-auto space-x-2 px-6 py-3 bg-blue-600 text-white font-bold rounded-lg shadow-xl hover:bg-blue-700 transition duration-150 transform hover:scale-[1.01]"
              >
                <Facebook size={20} />
                <span>Sign In with Facebook (Demo)</span>
             </button>
           </div>
        ) : (
          <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
            <ProfileCard />
            <ExpiryCard />
            <div className="md:col-span-2">
              <ChecklistCard />
            </div>
          </div>
        )}

      </div>
    </div>
  );
};

export default App;


